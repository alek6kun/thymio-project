
digraph fsm {
    node [shape=circle];
    start [shape=point];  // invisible start node
    start -> S0;  // initial transition
    
    S0 [label="State 0"];
    S1 [label="State 1"];
    S2 [label="State 2"];
    S3 [label="State 3"];

    S0 -> S1 [label="Event A"];
    S1 -> S2 [label="Event B"];
    S2 -> S3 [label="Event C"];
    S3 -> S0 [label="Event D"];
}
